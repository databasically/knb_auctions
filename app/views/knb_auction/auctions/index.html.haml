%h1 Auctions

%table
  %tr
    %th Item up for Auction
    %th
    %th Start Date
    %th Start Time
    %th End Date
    %th End Time
    %th High Bidder
    %th High Bid
    %th
    %th
    %th

  - @auctions.each do |auction|
    %tr
      %td= link_to auction.product_name, auction
      %td
        - status_label(auction.status) {auction.status.to_s.upcase}
      %td= start_at_local_time( auction ).to_date
      %td= start_at_local_time( auction ).strftime("%I:%M %p %Z")
      %td= end_at_local_time( auction ).to_date
      %td= end_at_local_time( auction ).strftime("%I:%M %p %Z")
      %td= bid_owner_name( auction )
      %td= auction.high_bid.goodles
      - if current_user.admin?
        %td= link_to 'Details', auction
        %td= link_to 'Edit', edit_auction_path(auction)
        %td= button_to "Delete", auction, :method=>:delete, :class=>:destroy,:confirm=>"Are you sure?"
- if current_user.admin?
  %br
  = link_to 'Create a new Auction', new_auction_path
