= form_for @auction do |f|
  - if @auction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@auction.errors.count, "error")} prohibited this auction from being saved:"
      %ul
        - @auction.errors.full_messages.each do |msg|
          %li= msg
          
  .start-at
    = f.label :start_at_localtime
    = f.datetime_select :start_at_localtime
  .duration
    = f.label :duration
    = f.select(:duration_string, [['1 Day', "1.day"], ['1 Week', "1.week"], ['2 Weeks', "2.weeks"], ['3 Weeks', "3.weeks"], ['1 Month', "1.month"]])
  .product
    = f.label :product
    =collection_select(:auction, :product_id, @product_dropdown, :id, :name, {include_blank: false})
  .start-price
    = f.label :start_price
    = f.text_field :start_price
  .actions
    = f.submit 'Save'
